for i in range(1,n+1):
    print("*"*i + " "*(n-i))
#왼쪽정렬 삼각형

for i in range(1,n+1):
    print(" "*(n-i) + "*"*i)
#오른쪽 정렬 삼각형

for i in range(n,0,-1):
    print(" "*(i-1)+"*"*(2*(n-i)+1))
#삼각형

for i in range(1,n+1):
    print(" "*(i-1)+"*"*(2*(n-i)+1))
#역삼각형

for i in range(1,n+1):
    print("*"*i + " "*(n-i))

for i in range(1,n+1):
    print("*"*(n-i)+" "*(i-1))
# 두개 합친거

def input_positive_number(n):
    while n <= 0:
        n = int(input("양의 정수를 입력하세요 : "))
    
    return n

def display_multiplication_table(n):
    # for i in range(1,10):
    #     print(f"{n} * {i} = {n*i:2d}") # :2d 는 두칸 오른쪽 정렬
    i = 1
    while i <= 9 :
        print(f"{n} * {i} = {n*i:2d}")
        i += 1

n = input_positive_number(int(input("양의 정수를 입력하세요 : ")))
display_multiplication_table(n)
